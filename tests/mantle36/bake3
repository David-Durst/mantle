#!/usr/bin/env python
import os, glob

tests = glob.glob('*')

def build():
    for test in tests:
        if os.path.isdir(test) and not test[0] == '_':
            os.system('cd %s; ./bake3 clean; ./bake3; cd ..' % test)

def gold():
    for test in tests:
        if os.path.isdir(test) and not test[0] == '_':
            os.system('cd %s; ./bake3 gold; cd ..' % test)


build()
#gold()
